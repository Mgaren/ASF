{% extends 'asf/layout.html.twig' %}

{% block stylesheets %}
    <link href="{{ '/styles/dirigeants.css' }}" rel="stylesheet">
    <link href="{{ '/styles/footer.css' }}" rel="stylesheet">
    <link href="{{ '/styles/nav.css' }}" rel="stylesheet">
    <link href="{{ '/styles/navAsf.css' }}" rel="stylesheet">
{% endblock %}

{% block title %}Dirigeants ASF{% endblock %}

{% block main %}
    <div class="intro">
        <div class="container">
            <h1>Bureau ASF</h1>
        </div>
    </div>
    <ul class="container_dirigeant">
        {% for dirigeant in dirigeants %}
            <li class="container_item">
                <div class="dirigeant">
                    <div class="dirigeant_info">
                        <div><h2>{{ dirigeant.firstname }}</h2></div>
                        <div><h2>{{ dirigeant.lastname }}</h2></div>
                    </div>
                    <div class="dirigeant_image">
                        {% if dirigeant.image == true %}
                            <img src="/uploads/dirigeants/{{ dirigeant.image }}">
                        {% endif %}
                    </div>
                    <div class="dirigeant_post">
                        <div><h4>{{ dirigeant.dirigeantsPost.name }}</h4></div>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
