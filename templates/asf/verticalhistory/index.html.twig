{% extends 'asf/layout.html.twig' %}

{% block stylesheets %}
    <link href="{{ '/styles/verticalHistory.css' }}" rel="stylesheet">
    <link href="{{ '/styles/footer.css' }}" rel="stylesheet">
    <link href="{{ '/styles/nav.css' }}" rel="stylesheet">
    <link href="{{ '/styles/navAsf.css' }}" rel="stylesheet">
{% endblock %}

{% block title %}L'histoire de l'ASF{% endblock %}

{% block main %}
    <section class="intro">
        <div class="container">
            <h1>L'histoire de l'ASF &darr;</h1>
        </div>
    </section>
    <section class="timeline">
        <ul>
            {% for verticalHistory in verticalHistorys %}
            <li>
                <div>
                    <time><a href="{{ path('asf_history_history') }}">{{ verticalHistory.titre }}</a></time>
                    <p>{{ verticalHistory.description }}</p>
                    {% if verticalHistory.image == true %}
                        <img src="/uploads/histoire/{{ verticalHistory.image }}">
                    {% endif %}
                </div>
            </li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
