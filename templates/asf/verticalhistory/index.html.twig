{% extends 'asf/layout.html.twig' %}

{% block stylesheets %}
    <link href="{{ '/styles/verticalHistory.css' }}" rel="stylesheet">
    <link href="{{ '/styles/footer.css' }}" rel="stylesheet">
    <link href="{{ '/styles/nav.css' }}" rel="stylesheet">
    <link href="{{ '/styles/navAsf.css' }}" rel="stylesheet">
{% endblock %}

{% block title %}L'histoire de l'ASF{% endblock %}

{% block main %}
    <section class="intro">
        <div class="container">
            <h1>L'histoire de l'ASF &darr;</h1>
        </div>
    </section>
    <section class="timeline">
        <ul>
            {% for keya, date in verticalHistories %}
                {% for keyb, history in date %}
                    <li>
                        <div>
                            <section>
                                <time><a href="{{ path('asf_history_history') }}#{{ keyb ~ keya }}">{{ keya }}</a></time>
                                <p>{{ history.description }}</p>
                            </section>
                            {% if history.image == true %}
                                <img src="/uploads/histoire/{{ history.image }}">
                            {% endif %}
                        </div>
                    </li>
                {% endfor %}
            {% endfor %}
        </ul>
    </section>
{% endblock %}
