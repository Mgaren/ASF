{% extends 'asf/layout.html.twig' %}

{% block stylesheets %}
    <link href="{{ '/styles/adherant.css' }}" rel="stylesheet">
    <link href="{{ '/styles/footer.css' }}" rel="stylesheet">
    <link href="{{ '/styles/nav.css' }}" rel="stylesheet">
    <link href="{{ '/styles/navAsf.css' }}" rel="stylesheet">
{% endblock %}

{% block title %}Carte AdhÃ©rent{% endblock %}

{% block main %}
    <div class="intro">
        <div class="container">
            <h1>La carte adhÃ©rent</h1>
        </div>
    </div>
    <ul class="container_adherant">
        {% for adherant_image in adherant_images %}
            <li class="container_item">
                <div class="adherant">
                    <div class="adherant_image">
                        {% if adherant_image.image == true %}
                            <img src="/uploads/adherant/{{ adherant_image.image }}">
                        {% endif %}
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
    <ul class="container_adherant">
        {% for adherant_text in adherant_texts %}
            <li class="container_item">
                <div class="adherant">
                    <div class="dirigeant_text">
                        <div><h2>{{ adherant_text.description }}</h2></div>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
    <ul class="container_adherant">
        {% for adherant_partenaire in adherant_partenaires %}
            <li class="container_item">
                <div class="adherant">
                    <div class="dirigeant_partenaire">
                        <div class="dirigeant_partenaire">{{ adherant_partenaire.category.name }}</div>
                        <div>{{ adherant_partenaire.name }}</div>
                        <div>{{ adherant_partenaire.description }}</div>
                        {% if adherant_partenaire.image == true %}
                            <a href="{{ adherant_partenaire.lien }}"><img src="/uploads/adherant/{{ adherant_partenaire.image }}"></a>
                        {% endif %}
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
