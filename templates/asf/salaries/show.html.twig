{% extends 'base.html.twig' %}

{% block title %}Salaries{% endblock %}

{% block body %}
    <h1>Salariés</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ salary.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ salary.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ salary.lastname }}</td>
            </tr>
            <tr>
                <th>Section</th>
                <td>
                    {% for section in salary.sectionSalary %}
                        {{ section.name }}
                    {% endfor %}
                </td>
            <tr>
                <th>Image</th>
                <td>{{ salary.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_salaries') }}">Retour à la liste</a>

    <a href="{{ path('asf_salaries_edit', {'id': salary.id}) }}">Editer</a>

    {{ include('asf/salaries/_delete_form.html.twig') }}
{% endblock %}
